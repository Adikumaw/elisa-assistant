# ============================================================================
# ELISA Voice Assistant - Environment Configuration
# ============================================================================
# Copy this file to .env and update the values as needed.
# ============================================================================

# =========================
# Service Ports
# =========================
TTS_PORT=5002
DUCKLING_PORT=8000
LOGIC_PORT=8021
NLU_PORT=5005
NLU_ACTIONS_PORT=5055
UI_PORT=35109
WEBSOCKET_PORT=8765

# =========================
# API Keys
# =========================
# OpenWeatherMap API Key (get free key from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_api_key_here

# =========================
# Whisper STT Configuration
# =========================
# Model options: tiny, base, small, medium, large
WHISPER_MODEL=medium.en

# =========================
# TTS Configuration
# =========================
TTS_MODEL=tts_models/en/ljspeech/glow-tts

# =========================
# Timezone
# =========================
TIMEZONE=Asia/Kolkata

# =========================
# Debug Mode
# =========================
DEBUG=false
LOG_LEVEL=INFO
